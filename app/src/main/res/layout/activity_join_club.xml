<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_join_club"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.community.JoinClubActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拒绝"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请加入"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >


            <com.guyj.img.EasyImageView
                android:id="@+id/iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="昵称"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="姓名"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="性别"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="年龄"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="年级"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tv_studentid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="学号"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/tv_college"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="专业/学院"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="兴趣标签"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <CheckBox
                    android:id="@+id/cb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_cb"
                    android:button="@null"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:text="111"
                    android:clickable="false"
                    />

                <CheckBox
                    android:id="@+id/cb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_cb"
                    android:button="@null"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:text="222"
                    android:clickable="false"
                    />

                <CheckBox
                    android:id="@+id/cb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_cb"
                    android:button="@null"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:text="333"
                    android:clickable="false"
                    />
            </com.google.android.flexbox.FlexboxLayout>

                <TextView
                    android:id="@+id/tv_hometown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="故乡"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="联系方式"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="个性签名"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
