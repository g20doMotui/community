<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_club_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.community.ClubInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/title">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社团介绍"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请加入"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <com.guyj.img.EasyImageView
        android:id="@+id/iv_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        app:corner_radius="10dp"
        app:type="rectangle"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_alignTop="@id/iv_photo"
        android:padding="10dp"
        android:text="社团：XXX" />

    <TextView
        android:id="@+id/tv_jibie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_below="@id/tv_name"
        android:padding="10dp"
        android:text="级别：XXX" />

    <TextView
        android:id="@+id/tv_xueyuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_below="@id/tv_jibie"
        android:padding="10dp"
        android:text="学院：XXX" />

    <TextView
        android:id="@+id/tv_leixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_below="@id/tv_xueyuan"
        android:padding="10dp"
        android:text="类型：XXX" />

    <TextView
        android:id="@+id/tv_jianjie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_photo"
        android:padding="10dp"
        android:text="简介：XXX" />

</RelativeLayout>
